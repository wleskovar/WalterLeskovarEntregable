<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="15dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenItemViewItem"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/bizcocho_caliente"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Bizcocho de leche evaporada caliente"
                android:textSize="20dp"
                android:textColor="#021370"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/tituloItemTextView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Postre"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#021370"
                android:textStyle="bold"
                android:id="@+id/tipoItemTextView"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>